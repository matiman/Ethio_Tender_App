class SessionsController < ApplicationController
	
	def new
	end

	def create
		user=User.find_by_email(params[:email])
		if user && user.authenticate(params[:password])
			sign_in user		
			redirect_back_or root_path #when a user logs in it will display either the root(tenders) page or the stored location before he logged in

		else
			flash.now[:error]= 'Invalid email/password combination'
			render 'new'
		end
	end

	def destroy
		sign_out
		redirect_to root_path
	end
end
